[user]
	email = alexjonathanlopes@gmail.com
	name = Alex Lopes
[init]
	defaultBranch = main
[core]
	autocrlf = input
[url "https://github.com/"]
    insteadOf = gh:
[url "https://gist.github.com/"]
	insteadOf = gist:

[alias]
	a = add
	ap = add --all --patch
	aa = add --all
	b = branch --verbose
	c = commit
	cm = commit -m
	co = checkout
	d = diff
	f = fetch
	fa = fetch --all
	l = log
	ps = push
	psu = push --set-upstream
	pl = pull
	plu = pull upstream
	r = remote --verbose
	s = status --short --branch
	acp = !git add --all && git commit --allow-empty-message -m '' && git push
	acm = !git add --all && git commit -m
