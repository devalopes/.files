! Defaults for X applications (e.g. xterm)
! Much config driven from:
! http://www.futurile.net/2016/06/14/xterm-setup-and-truetype-font-configuration/
!
?*Background: black
?*Foreground: light gray
XTerm*termName: xterm-256color
!XTerm*faceName: Bitstream Vera Sans Mono ! TrueType font
XTerm*faceName: Monospace
!XTerm*font: *-fixed-*-*-*-18-* ! Not a TrueType font, disables TrueType
XTerm*faceSize: 12
XTerm*locale: UTF-8

! ctrl+/-/0(reset) font size in xterm
XTerm*VT100.Translations: #override \
    Ctrl <Key> minus: smaller-vt-font() \n\
    Ctrl <Key> plus: larger-vt-font() \n\
    Ctrl <Key> 0: set-vt-font(d)

! Lines of output that you can scroll back over
XTerm*saveLines: 4096
!Turn the scrollbar on, and put it on the right
XTerm*scrollBar: true
XTerm*rightScrollBar: true

! Do not scroll when there is a new input e..g tail -f /var/syslog
XTerm*srollTtyOutput: false
